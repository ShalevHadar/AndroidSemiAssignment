<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image_for_home"
    android:orientation="vertical"
    tools:context=".ChooseBurgerType">

    <TextView
        android:id="@+id/greetings_txt"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_design"
        android:fontFamily="@font/sans"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="176dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="150dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/self_made_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/self_made"
            android:textSize="30sp"
            android:textColor="@color/black" />

        <ImageButton
            android:id="@+id/create_burger_btn"
            android:layout_width="189dp"
            android:layout_height="220dp"

            android:background="@null"
            android:onClick="onClickCustomMadeChoose"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/burger" />


    </LinearLayout>



</LinearLayout>